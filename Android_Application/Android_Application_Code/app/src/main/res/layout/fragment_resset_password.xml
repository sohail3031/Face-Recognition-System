<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#6699ff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:padding="20dp"
            android:background="#3366cc">

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:cardCornerRadius="60dp"
                android:layout_centerVertical="true"
                android:background="#3366cc"
                android:id="@+id/imageCard">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/resetImage"
                    android:layout_centerVertical="true"
                    android:src="@drawable/user"
                    tools:ignore="ResetDescript"
                    android:layout_margin="10dp" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/imageCard"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:id="@+id/userNameResetContact"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Email"
                android:textColor="#fff"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/imageCard"
                android:layout_below="@+id/userNameResetContact"
                android:layout_marginLeft="25dp"
                android:id="@+id/userEmailInfoResetContact"
                android:layout_marginTop="10dp"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/currentPasswordTextInputReset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Current Password"
                android:textColorHint="#fff"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:hintTextColor="#fff"
                app:boxStrokeColor="#fff"
                app:boxStrokeWidthFocused="2dp"
                app:startIconDrawable="@drawable/ic_baseline_lock_24"
                app:startIconTint="#fff"
                app:endIconMode="password_toggle"
                app:endIconTint="#fff">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/resetNewPasswordResetCurrent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:textSize="20sp"
                    android:fontFamily="serif"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:textColorHint="#fff"
                    android:textColor="#fff"
                    app:hintTextColor="#fff" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/resetPasswordTextInputReset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="New Password"
                android:textColorHint="#fff"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:hintTextColor="#fff"
                app:boxStrokeColor="#fff"
                app:boxStrokeWidthFocused="2dp"
                app:startIconDrawable="@drawable/ic_baseline_lock_24"
                app:startIconTint="#fff"
                app:endIconMode="password_toggle"
                app:endIconTint="#fff">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/resetNewPasswordReset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:textSize="20sp"
                    android:fontFamily="serif"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:textColorHint="#fff"
                    android:textColor="#fff"
                    app:hintTextColor="#fff" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/resetConfirmPasswordTextInputReset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Confirm Password"
                android:textColorHint="#fff"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:hintTextColor="#fff"
                app:boxStrokeColor="#fff"
                app:boxStrokeWidthFocused="2dp"
                app:startIconDrawable="@drawable/ic_baseline_lock_24"
                app:startIconTint="#fff"
                app:endIconMode="password_toggle"
                app:endIconTint="#fff">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/resetNewConfirmPasswordReset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:textSize="20sp"
                    android:fontFamily="serif"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:textColorHint="#fff"
                    android:textColor="#fff"
                    app:hintTextColor="#fff" />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/confirmPassword">

                <ProgressBar
                    android:id="@+id/resetProgressBarReset"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:indeterminate="false"
                    android:maxHeight="20dip"
                    android:minHeight="20dip"
                    android:progress="0"
                    android:textColor="#fff"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/reset_password_strengthReset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Weak"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:visibility="gone"/>

            </LinearLayout>

            <TextView
                android:id="@+id/login_instructionsReset"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="For security, your password must be at least 8 characters. With at least 1 number, 1 special character and 1 uppercase letter."
                android:textColor="#fff"
                android:visibility="gone"/>

            <Button
                android:id="@+id/setNewPasswordReset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="5dp"
                android:background="#3366cc"
                android:fontFamily="serif"
                android:text="Set New Password"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold"
                android:transitionName="transition_next_button"/>

            <Button
                android:id="@+id/generateNewPasswordReset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="5dp"
                android:background="#3366cc"
                android:fontFamily="serif"
                android:text="Generate Strong Password Here"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold"
                android:transitionName="transition_login_button"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>