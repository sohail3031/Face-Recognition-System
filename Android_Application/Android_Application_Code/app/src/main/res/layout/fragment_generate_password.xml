<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#6699ff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="#6699ff">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:id="@+id/mobileBackButtonReset"
            android:src="@drawable/ic_back_white"
            android:transitionName="transition_back_arrow_button" />

        <TextView
            android:id="@+id/mobileGeneratePasswordReset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generate Strong Password"
            android:textSize="30sp"
            android:fontFamily="serif"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_marginTop="20dp"
            android:transitionName="logo_text"
            android:textAlignment="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="40dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:fontFamily="serif"
                android:textSize="24sp"
                android:textStyle="bold"
                android:text="Click The Below Button To Generate Strong Password"
                android:id="@+id/monileInstructionsOneReset"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:fontFamily="serif"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Please Select Your Requirements below"
                android:id="@+id/mobileInstructionsTwoReset"
                android:layout_marginTop="24dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_weight="1">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="A-Z"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="#fff"
                        android:id="@+id/mobileCapitalLetterReset"
                        android:textAlignment="center"
                        android:buttonTint="#fff"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="#6699ff"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="a-z"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="#fff"
                        android:id="@+id/mobileSmallLetterReset"
                        android:textAlignment="center"
                        android:buttonTint="#fff"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="#6699ff" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="0-9"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="#fff"
                        android:id="@+id/mobileNumbersReset"
                        android:textAlignment="center"
                        android:buttonTint="#fff"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="#6699ff" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="!@#"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="#fff"
                        android:id="@+id/mobileSpecialReset"
                        android:textAlignment="center"
                        android:buttonTint="#fff"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="#6699ff" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#fff"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_weight="1">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/mobilePasswordLengthGroupReset"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:text="6"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="#fff"
                        android:id="@+id/mobileSixLengthReset"
                        android:textAlignment="center"
                        android:buttonTint="#fff"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="#6699ff" />

                    <RadioButton
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:text="10"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="#fff"
                        android:id="@+id/mobileTenLengthReset"
                        android:textAlignment="center"
                        android:buttonTint="#fff"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="#6699ff" />

                    <RadioButton
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:text="12"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="#fff"
                        android:id="@+id/mobileTwelveLengthReset"
                        android:textAlignment="center"
                        android:buttonTint="#fff"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="#6699ff" />

                    <RadioButton
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:text="16"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="#fff"
                        android:id="@+id/mobileSixteenLengthReset"
                        android:textAlignment="center"
                        android:buttonTint="#fff"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="#6699ff" />

                </RadioGroup>

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/generateStrongPasswordTextReset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Password"
                android:textColorHint="#fff"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:hintTextColor="#fff"
                app:boxStrokeColor="#fff"
                app:boxStrokeWidthFocused="2dp"
                app:startIconDrawable="@drawable/ic_baseline_lock_24"
                app:startIconTint="#fff"
                app:endIconMode="password_toggle"
                app:endIconTint="#fff">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/mobileGenerateStrongPasswordReset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:textSize="20sp"
                    android:fontFamily="serif"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:textColorHint="#fff"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:textColor="#fff"
                    app:hintTextColor="#fff"
                    app:layout_constraintBottom_toTopOf="@+id/button"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editText" />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/mobileGeneratePasswordButtonReset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="#3366cc"
                android:fontFamily="serif"
                android:text="Generate Password"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/mobilePasswordReset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="#3366cc"
                android:fontFamily="serif"
                android:text="Go To Reset Password"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold"
                android:transitionName="transition_next_button"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>