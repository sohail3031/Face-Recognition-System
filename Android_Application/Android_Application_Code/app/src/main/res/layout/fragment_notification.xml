<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3366cc">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notification"
            android:textSize="40sp"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:textAlignment="center"
            android:textColor="#fff"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/personInfo"
            android:text="Identified Person Information"
            android:textSize="30sp"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:layout_marginTop="15dp"
            android:textColor="#fff"
            android:paddingLeft="25dp"/>

        <ImageView
            android:id="@+id/userImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_android_white_24dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:layout_marginTop="30dp"
            android:padding="15dp"
            android:scaleType="fitXY"
            android:background="#6699ff"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:background="#6699ff">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/personName"
                android:text="Person Name : "
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:textColor="#fff"
                android:layout_weight="1"
                android:background="#6699ff"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/displayPersonName"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:textColor="#fff"
                android:layout_weight="1"
                android:background="#6699ff"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:background="#6699ff">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/personStatus"
                android:text="Person Status : "
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:textColor="#fff"
                android:layout_weight="1"
                android:background="#6699ff"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/displayPersonStatus"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:textColor="#fff"
                android:layout_weight="1"
                android:background="#6699ff"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:background="#6699ff">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/personLoss"
                android:text="Loss : "
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:textColor="#fff"
                android:layout_weight="1"
                android:background="#6699ff"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/displayPersonLoss"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:textColor="#fff"
                android:layout_weight="1"
                android:background="#6699ff"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:background="#6699ff">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/notificationDateTime"
                android:text="Notification Received On : "
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:textColor="#fff"
                android:layout_weight="1"
                android:background="#6699ff"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/displayNotificationDateTime"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:textColor="#fff"
                android:layout_weight="1"
                android:background="#6699ff"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:background="#6699ff">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/personFirstIdentified"
                android:text="First Time Identified : "
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:textColor="#fff"
                android:layout_weight="1"
                android:background="#6699ff"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/displayPersonFirstIdentified"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:textColor="#fff"
                android:layout_weight="1"
                android:background="#6699ff"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:background="#6699ff">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/personLastIdentified"
                android:text="Last Time Identified : "
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:textColor="#fff"
                android:layout_weight="1"
                android:background="#6699ff"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/displayPersonLastIdentified"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:textColor="#fff"
                android:layout_weight="1"
                android:background="#6699ff"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"/>

        </LinearLayout>

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:background="#6699ff">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/personDescription"
                    android:text="Description : "
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:padding="10dp"
                    android:textColor="#fff"
                    android:layout_weight="1"
                    android:background="#6699ff"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/displayPersonDescription"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:padding="10dp"
                    android:textColor="#fff"
                    android:layout_weight="1"
                    android:background="#6699ff"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"/>

            </LinearLayout>

        </ScrollView>

        <Button
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:textAlignment="center"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:visibility="gone"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/modifyNotification"
            android:text="Modify Notification"
            android:textColor="#fff"
            android:textSize="24sp"
            android:textAlignment="center"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:background="#6699ff"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:visibility="gone"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/updateNotification"
            android:text="Save Changes"
            android:textColor="#fff"
            android:textSize="24sp"
            android:textAlignment="center"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:background="#6699ff"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:visibility="gone"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/deleteNotification"
            android:text="Delete Notification"
            android:textColor="#fff"
            android:textSize="24sp"
            android:textAlignment="center"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:background="#6699ff"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:visibility="gone"/>

    </LinearLayout>

</ScrollView>